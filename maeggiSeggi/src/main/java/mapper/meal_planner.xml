<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- mapper가 너무 많으니까 namespace로 구분지어주기 -->
<mapper namespace="maeggi.seggi.reply">
	<select id="mealPlan" resultType="meal">
		select * from meal_Planner where planner_date >= sysdate and member_id = #{member_id}
		order by planner_date asc, PLANNER_CODE asc
	</select>
	
	<insert id="mealPlanInsert" parameterType="meal">
		insert into meal_planner 
		values(mealplanner_seq.nextval, #{meal_name}, sysdate, #{planner_date},#{planner_code},#{member_id},#{kcal})
	</insert>
</mapper>









