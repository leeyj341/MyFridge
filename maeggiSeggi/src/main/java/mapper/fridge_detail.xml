<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="maeggi.seggi.fridge">
  		<select id="selectAll" resultType="fridgeDetail" parameterType="String">
  			select * from refrigerator_detail where refrigerator_id=#{refrigerator_id};
  		</select>
  		<insert id="insertFridgeDetail" parameterType="fridgeDetail">
  			insert into refrigerator_detail 
  			values(#{code}, #{ingredient_id}, #{amount}, #{expire_date_rt}, #{expire_date_cold}, sysdate, #{user_expire_date}, #{refrigerator_id})
  		</insert>
  		<delete id="deleteFridgeDetail" parameterType="fridgeDetail">
  			delete from refrigerator_detail
  			where refrigerator_id=#{refrigerator_id} and ingredient_id=#{ingredient_id}
  		</delete>
  </mapper>